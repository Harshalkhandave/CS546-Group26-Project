<div class="page-bg"></div>

<div class="card-container">

    <!-- LEFT VIDEO PANEL -->
    <div class="left-panel">
        <video class="left-video" autoplay muted loop playsinline>
            <source src="/public/css/videos/loginSideVideo.mp4" type="video/mp4">
        </video>
    </div>

    <!-- RIGHT LOGIN FORM -->
    <div class="right-panel">

        <h1>Welcome back</h1>

        <p class="login-link">
            New here?
            <a href="/user/register">Create an account</a>
        </p>

        <form method="POST" action="/user/login">

            <input type="email" name="email" placeholder="Email" required>

            <input type="password" name="password" placeholder="Enter your password" required>

            <label class="terms">
                <input type="checkbox" name="remember">
                Remember me
            </label>

            <button class="primary-btn">Log in</button>
        </form>

        <div class="divider">Or continue with</div>

        <div class="social-row">
            <a href="/user/auth/google" class="oauth-btn google">Google</a>
            <a href="/user/auth/apple" class="oauth-btn apple">Apple</a>
        </div>

        <p class="forgot">
            <a href="/user/forgot-password">Forgot your password?</a>
        </p>

    </div>

</div>
