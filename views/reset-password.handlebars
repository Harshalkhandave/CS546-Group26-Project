<div class="page-bg"></div>

<div class="card-container">

    <!-- LEFT VIDEO PANEL -->
    <div class="left-panel">
        <video class="left-video" autoplay muted loop playsinline>
            <source src="/public/css/videos/loginSideVideo.mp4" type="video/mp4">
        </video>
    </div>

    <!-- RIGHT FORM PANEL -->
    <div class="right-panel">

        <h1>Create New Password</h1>

        <p class="login-link">
            <a href="/users/login">Back to login</a>
        </p>

        {{#if error}}
        <p class="error-text">{{error}}</p>
        {{/if}}

        <form method="POST" action="/users/reset-password/{{token}}">

            <input type="password" name="password" placeholder="New Password" required>
            
            <input type="password" name="confirmPassword" placeholder="Confirm Password" required>

            <p class="form-hint">
                Password must be at least 8 characters and include:
                <br>• Uppercase letter (A-Z)
                <br>• Lowercase letter (a-z)
                <br>• Number (0-9)
                <br>• Special character (!@#$%^&*)
            </p>

            <button class="primary-btn">Reset Password</button>
        </form>

    </div>

</div>

<!-- Server messages are handled globally by /public/js/toast.js -->
