<div class="page-bg"></div>

<div class="card-container">

    <!-- LEFT VIDEO PANEL -->
    <div class="left-panel">
        <video class="left-video" autoplay muted loop playsinline>
            <source src="/public/css/videos/loginSideVideo.mp4" type="video/mp4">
        </video>
    </div>

    <!-- RIGHT FORM PANEL -->
    <div class="right-panel">

        <h1>Reset Your Password</h1>

        <p class="login-link">
            Remember your password?
            <a href="/users/login">Back to login</a>
        </p>

        {{#if error}}
        <p class="error-text">{{error}}</p>
        {{/if}}
        {{#if message}}
        <p class="message-text">{{message}}</p>
        {{/if}}

        {{#if resetLink}}
        <div class="reset-link-box">
            <p class="reset-link-label">Your password reset link:</p>
            <a href="{{resetLink}}" class="reset-link-btn">Click here to reset password</a>
            <p class="reset-link-note">This link expires in 30 minutes.</p>
        </div>
        {{else}}
        <form method="POST" action="/users/forgot-password">

            <input type="email" name="email" placeholder="Enter your email" required>

            <button class="primary-btn">Send Reset Link</button>
        </form>
        {{/if}}

    </div>

</div>

<!-- Server messages are handled globally by /public/js/toast.js -->
