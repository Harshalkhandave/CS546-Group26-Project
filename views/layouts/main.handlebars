</head>

<body>
  <header class="site-header">
    <div class="container header-content">
      <h1 class="logo">Water Quality Monitor</h1>

      <nav class="main-nav">
        <a href="/">Home</a>
        <a href="/boroughs">Boroughs</a>
        {{!-- <a href="/votes/best">Best Borough</a> --}}
        {{#if currentUser}}
        {{!-- <a href="/users/profile">Profile</a> --}}
        <a href="/users/profile"><span class="nav-user">Hello, {{#if
            currentUser.fname}}{{currentUser.fname}}{{else}}{{currentUser.email}}{{/if}}</span></a>
        <a href="/users/logout" class="btn btn-outline">Sign Out</a>
        {{else}}
        {{!-- <a href="/users/profile">Profile</a> --}}
        <a href="/users/login" class="btn btn-outline">Login</a>
        <a href="/users/register" class="btn btn-primary">Sign Up</a>
        {{/if}}
        <button id="themeToggle" class="theme-toggle">
          
        </button>
      </nav>
    </div>
  </header>

  <main class="page-main">
    {{{body}}}
  </main>

  <!-- Theme Toggle Script -->
  <script>
    const themeToggle = document.getElementById("themeToggle");

    themeToggle.addEventListener("click", () => {
      const isDark = document.body.classList.toggle("theme-dark");

      // Switch emoji
      themeToggle.textContent = isDark ? "" : "";

      // remember theme
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });

    // Load saved theme on refresh
    const savedTheme = localStorage.getItem("theme");
    if (savedTheme === "dark") {
      document.body.classList.add("theme-dark");
      themeToggle.textContent = "";
    }
  </script>

  <footer class="site-footer">
    <div class="container footer-content">
      <p>漏 2025 Water Quality Monitor 路 CS546A Group 26 路 Final Project</p>
      <p class="footer-links">
        <a href="/help">Help</a> 路
        <a href="/contact">Contact</a> 路
        <a href="/stevens">Stevens</a>
      </p>
    </div>
  </footer>
  <!-- server flash container (used by client toast script) -->
  <div id="server-flash-global" data-error="{{error}}" data-message="{{message}}" data-resend="{{resendLink}}"
    style="display:none"></div>

  <script src="/public/js/toast.js"></script>
</body>

</html>