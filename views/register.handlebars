<div class="page-bg"></div>

<div class="card-container">

    <div class="left-panel">
        <video class="left-video" autoplay muted loop playsinline>
            <source src="/public/css/videos/loginSideVideo.mp4" type="video/mp4">
        </video>
    </div>

    <div class="right-panel">

        <h1>Create an account</h1>

        <p class="login-link">
            Already have an account?
            <a href="/users/login">Log in</a>
        </p>

        {{#if error}}
        <p class="error-text">{{error}}</p>
        {{/if}}
        {{#if message}}
        <p class="message-text">{{message}}</p>
        {{#if loginLink}}
        <p><a href="{{loginLink}}" class="btn btn-outline">Go to Login</a></p>
        {{/if}}
        {{#if resendLink}}
        <p><a href="{{resendLink}}" class="btn btn-outline">Resend verification</a></p>
        {{/if}}
        {{/if}}
        {{#if verifyUrl}}
        <p>Verification link (dev): <a href="{{verifyUrl}}">{{verifyUrl}}</a></p>
        {{/if}}

        <form method="POST" action="/users/register">

            <div class="row">
                <input type="text" name="fname" placeholder="First name" required>
                <input type="text" name="lname" placeholder="Last name" required>
            </div>

            <input type="email" name="email" placeholder="Email" required>

            <input type="password" name="password" placeholder="Enter your password" required>

            <label class="terms">
                <input type="checkbox" required>
                I agree to the <a href="#">Terms & Conditions</a>
            </label>

            <button class="primary-btn">Create account</button>
        </form>
        {{!-- Google method deleted --}}

    </div>

</div>